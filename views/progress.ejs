		function getWaterIntake() {
        return sessionStorage.getItem('center-water') || 0;
    }

    document.addEventListener('DOMContentLoaded', function() {
        var calendar = $('#calendar').fullCalendar({
            dayRender: function (date, cell) {
    // Get water intake for the current date from sessionStorage
    var waterIntake = getWaterIntake();

    // Display the water intake on the calendar for the current date
    if (date.format('YYYY-MM-DD') === moment().format('YYYY-MM-DD')) {
        var waterIntakeHtml = ' water intake:<div class="water-intake-indicator">' + waterIntake + '</div>';
        cell.append(waterIntakeHtml);
    }
}
            }
        );

        calendar.fullCalendar('today');
    });

    </script>
