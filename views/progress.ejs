<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Progress</title>
    <!-- Add your stylesheets or other head elements here -->
    <link rel="stylesheet" href="/styles/progress.css">
    <!-- <script src="/js/progress.js"></script> -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/3.7.0/chart.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/p5.js/1.9.0/p5.js"></script>
    <link rel="stylesheet" href="styles.css">
</head>
<!-- <script src="/js/progress.js"></script> -->
<!-- <script src="/js/streaks.js"></script> -->

<body>
<div class="container mt-3">
    <div class="row align-items-stretch"> 
        <div class="col-md-7 mb-3">
            <div class="p-3 bg-light h-100 d-flex align-items-center justify-content-center" style="max-height:10rem">
                <h1>Welcome to your progress dashboard</h1>
            </div>
        </div>
        <div class="col-md-5 mb-3">
            <div class="h-100 d-flex flex-column justify-content-between" style="position: relative;">    
                <div class="top" id="dayContainer">
                </div>
                <div class="bottom">
                    <p class="text-center">
                        Current streak is <span id="currentStreak">0</span> day<span id="finalS">.</span>
                    </p>   
                </div>
            </div>
        </div>
    </div>
    <div class="row align-items-justify"> 
        <div class="col-md-5 mb-3">
            <div class="h-100 d-flex flex-column justify-content-between" style="position: relative;" id="streakContainer">
            </div>
        </div>
        <div class="col-md-7 mb-3">
            <div class="p-3 fs-5 border h-100 d-flex align-items-center justify-content-center canvas-container "style="background-color:white;">
                <canvas id="myChart" style="background-color:white;"></canvas>
            </div>
        </div>
    </div>


    <div class="row d-flex align-items-stretch justify-content-center"> 
        
        
        <div class="col-md-8 mb-3">
        <div class="p-3 fs-5 border bg-light h-100 d-flex align-items-center justify-content-center">Calendar</div>
        </div>
        
        
        <div class="col-md-4 mb-3">
            
            
            <div class="h-100 badgeBox"">
                <h5>Reflections streak</h5>
                <div class="h-100 d-flex flex-row" id="reflectionsContainer"></div>
            </div>
            
            
            <div class="h-100 badgeBox">
                <h5>Nutrition streak</h5>
                <div class="h-100 d-flex flex-row" id="nutritionContainer"></div>
            </div>
        
        
        </div>
    </div>
</div>
<!-- Add your scripts or other body elements here -->
<!-- <script src="/public/script.js"></script> -->
<script src="/js/progress.js"></script>
<script src="/js/chart.js"></script>
<script src="/js/badges.js"></script>



</body>
</html>
