<div class="container-fluid text-center"">
  <div class="d-flex justify-content-between align-items-center">
    <p class="lead mb-3 fw-bold">Home</p>
  </div>

  <div class="row align-items-center">
    <div class="col-md-12 m-auto text-center">
      <h2 class="display-5" style=" margin-top: 20px">
        Welcome, <%= name %>!
      </h2>
      <p class="lead" style="margin-bottom: 10px;">
        Select a Cetegory to Get Started
      </p>
      </div>
      </div>

  <div id="carouselFade" class="carousel slide carousel-fade">
    <div class="carousel-indicators">
      <button
        type="button"
        data-bs-target="#carouselFade"
        data-bs-slide-to="0"
        class="active"
        aria-current="true"
        aria-label="Slide 1"
      ></button>

      <button
        type="button"
        data-bs-target="#carouselFade"
        data-bs-slide-to="1"
        aria-label="Slide 2"
      ></button>

      <button
        type="button"
        data-bs-target="#carouselFade"
        data-bs-slide-to="2"
        aria-label="Slide 3"
      ></button>

      <button
        type="button"
        data-bs-target="#carouselFade"
        data-bs-slide-to="3"
        aria-label="Slide 4"
      ></button>

      <button
        type="button"
        data-bs-target="#carouselFade"
        data-bs-slide-to="4"
        aria-label="Slide 5"
      ></button>
    </div>

    <div class="carousel-inner">
      <div class="carousel-item active">
        <a href="/exercise">
          <img
            src="/resources/activity1.png"
            class="d-block w-100"
            alt="man exercising at home"
            style="border-radius: 40"
          />
        </a>
        <div class="carousel-caption d-none d-md-block">
          <h4>Recommended Activities</h4>
          <p>Some representative placeholder content for the first slide.</p>
        </div>
      </div>

      <div class="carousel-item">
        <a href="/meditation">
          <img
            src="/resources/meditation1.png"
            class="d-block w-100"
            alt="woman meditating"
          />
        </a>
        <div class="carousel-caption d-none d-md-block">
          <h4>Guided Breathing</h4>
          <p>Some representative placeholder content for the second slide.</p>
        </div>
      </div>

      <div class="carousel-item">
        <a href="/dailyReflections">
          <img
            src="/resources/nutrition.png"
            class="d-block w-100"
            alt="bowl of fruit"
          />
        </a>
        <div class="carousel-caption d-none d-md-block">
          <h4>Nutrition Log</h4>
          <p>Some representative placeholder content for the third slide.</p>
        </div>
      </div>

      <div class="carousel-item">
        <a href="/dailyReflections">
          <img
            src="/resources/journal.png"
            class="d-block w-100"
            style="width: 60%"
            alt="journaling"
          />
        </a>
        <div class="carousel-caption d-none d-md-block">
          <h4>Journaling</h4>
          <p>Some representative placeholder content for the third slide.</p>
        </div>
      </div>

      <div class="carousel-item">
        <a href="/progress">
          <img
            src="/resources/progress.png"
            class="d-block w-100"
            alt="progress"
          />
        </a>
        <div class="carousel-caption d-none d-md-block">
          <h4>Progress</h4>
          <p>Some representative placeholder content for the third slide.</p>
        </div>
      </div>
    </div>
    <button
      class="carousel-control-prev"
      type="button"
      data-bs-target="#carouselFade"
      data-bs-slide="prev"
    >
      <span class="carousel-control-prev-icon" aria-hidden="true"
      style="    
      width: 50px;
      height: 50px;
      background-color: rgba(0, 0, 0, 0.3);
      background-size: 100%, 100%;
      border-radius: 50%;
      border: 4px solid #6c46fa;">
      </span>
      <span class="visually-hidden">Previous</span>
    </button>
    <button
      class="carousel-control-next"
      type="button"
      data-bs-target="#carouselFade"
      data-bs-slide="next"
    >
      <span class="carousel-control-next-icon" aria-hidden="true" 
      style="
      width: 50px;
      height: 50px;    
      background-color: rgba(0, 0, 0, 0.3);
      background-size: 100%, 100%;
      border-radius: 50%;
      border: 4px solid #6c46fa;">
      </span>
      <span class="visually-hidden">Next</span>
    </button>
  </div>
</div>
