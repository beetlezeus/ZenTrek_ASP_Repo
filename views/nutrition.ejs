// Function to draw a speedometer-like widget
  // Function to draw a speedometer-like widget
        function drawSpeedometer(canvasId, currentValue, maxValue, label) {
            const canvas = document.getElementById(canvasId);
            const ctx = canvas.getContext('2d');



    // Calculate the percentage filled
    const percentageFilled = (currentValue / maxValue) * 100;

    // Draw the background half-circle
    ctx.beginPath();
    ctx.arc(75, 75, 70, Math.PI, 2 * Math.PI);
    ctx.strokeStyle = '#ddd';
    ctx.lineWidth = 15;
    ctx.stroke();

    // Draw the filled portion of the half-circle
    ctx.beginPath();
    ctx.arc(75, 75, 70, Math.PI, Math.PI + (percentageFilled / 100) * Math.PI);
    ctx.strokeStyle = '#3498db'; // Use your preferred color
    ctx.lineWidth = 15;
    ctx.stroke();

    // Display the label in the center
    ctx.font = '14px Arial';
    ctx.fillStyle = '#333';
    ctx.textAlign = 'center';
    ctx.fillText(label, 75, 75);
        }
