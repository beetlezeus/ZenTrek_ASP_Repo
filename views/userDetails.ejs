<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h1 class="text-center mb-3">
        <i class="fas fa-user-plus"></i> My Details
      </h1>
      <%- include('./partials/messages.ejs') %>

      <!-- Display User Name -->
      <div class="form-group">
        <label for="user_name">User Name:</label>
        <span><%= name %></span>
      </div>

      <!-- Display First Name -->
      <div class="form-group">
        <label for="first_name">First Name:</label>
        <span><%= first_name %></span>
      </div>

      <!-- Display Last Name -->
      <div class="form-group">
        <label for="last_name">Last Name:</label>
        <span><%= last_name %></span>
      </div>

      <!-- Display Age -->
      <div class="form-group">
        <label for="age">Age:</label>
        <span><%= age %></span>
      </div>

      <!-- Display Weight -->
      <div class="form-group">
        <label for="weight">Weight (kg):</label>
        <span><%= weight %></span>
      </div>

      <!-- Display Height -->
      <div class="form-group">
        <label for="height">Height (cm):</label>
        <span><%= height %></span>
      </div>

      <!-- Display Gender -->
      <div class="form-group">
        <label for="gender">Gender:</label>
        <span><%= gender %></span>
      </div>

      <!-- Display Fitness Level -->
      <div class="form-group">
        <label for="fitness_level">Fitness Level: </label>
        <% if(fitness_level <= 3){ %>
        <span> Beginner</span>
        <% } %> <% if(fitness_level >3 && fitness_level <=6){ %>
        <span> Intermediate</span>
        <% } %> <% if(fitness_level > 6){ %>
        <span> Fit</span>
        <% } %>
      </div>

      <!-- Display General Health -->
      <div class="form-group">
        <label for="general_health">General Health:</label>
        <% if(general_health <= 3){ %>
        <span> Poor</span>
        <% } %> <% if(general_health > 3 && general_health <=7){ %>
        <span> Average </span>
        <% } %> <% if(general_health > 7){ %>
        <span> Excellent</span>
        <% } %>
      </div>

      <!-- Display Activity Preferences selected by user -->

      <div class="form-group">
        <label for="activity_preference"> Preferred Activities:</label>
        <% if(strength) { %>
        <span
          style="
            padding: 5px;
            border-radius: 5px;
            background-color: #bad3fe;
            margin: 5px;
          "
          >Strength-Training</span
        >
        <% } %> <% if(cardio) { %>
        <span
          style="
            padding: 5px;
            border-radius: 5px;
            background-color: #bad3fe;
            margin: 5px;
          "
          >Cardio</span
        >
        <% } %> <% if(yoga) { %>
        <span
          style="
            padding: 5px;
            border-radius: 5px;
            background-color: #bad3fe;
            margin: 5px;
          "
          >Yoga</span
        >
        <% } %> <% if(meditation) { %>
        <span
          style="
            padding: 5px;
            border-radius: 5px;
            background-color: #bad3fe;
            margin: 5px;
          "
          >Meditation</span
        >
        <% } %>
      </div>

      <!-- Display Gender -->
      <div class="form-group">
        <label for="strength_frequency">Weekly Strength Goal: </label>
        <span><%= strength_frequency %> sessions </span>
      </div>
      <div class="form-group">
        <label for="cardio_frequency">Weekly Cardio Goal: </label>
        <span><%= cardio_frequency %> sessions </span>
      </div>
      <div class="form-group">
        <label for="yoga_frequency">Weekly Yoga Goal: </label>
        <span><%= yoga_frequency %> sessions </span>
      </div>
      <div class="form-group">
        <label for="meditation_frequency">Weekly Meditation Goal: </label>
        <span><%= meditation_frequency %> sessions </span>
      </div>

      <a
        href="/userDetails/edit"
        class="btn btn-secondary btn-block"
        style="margin-top: 20px; margin-bottom: 5px"
      >
        Edit Details
      </a>
    </div>
  </div>
</div>
