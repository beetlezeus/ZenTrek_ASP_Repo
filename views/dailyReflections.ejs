<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Daily Reflections</title>
    <!-- Add your stylesheets or other head elements here -->
</head>
<body>
    <div class="container">
        <h1 class="text-center">Daily Reflections</h1>

<!-- Journaling Area -->
<div class="row mt-5">
    <div class="col-md-8 m-auto">
        <div class="card p-4">
            <h2 class="text-center mb-4">Journaling Area</h2>
            <form action="/dailyReflections/submitReflections" method="post">
                <!-- Question for the day with emoji -->
                <div class="form-group">
                    <label for="questionOfTheDay"><strong>Question of the Day:</strong> üìÖ</label>
                    <p class="mb-4"><%= questionOfTheDay %></p>
                </div>

                <!-- Answer area -->
                <div class="form-group">
                    <label for="journalEntry">Reflect on your day:</label>
                    <textarea id="journalEntry" name="journalEntry" class="form-control" rows="5" required></textarea>
                </div>

                <!-- Mood selection -->
                <div class="form-group">
                    <label for="mood">Select your mood for the day:</label>
                    <select id="mood" name="mood" class="form-control" required>
                        <option value="happy">üòä Happy</option>
                        <option value="neutral">üòê Neutral</option>
                        <option value="sad">üò¢ Sad</option>
                        <!-- Add more mood options as needed -->
                    </select>
                </div>

                <!-- Submit Button with emoji -->
                <button type="submit" class="btn btn-primary mt-4 btn-block">Submit Reflections üöÄ</button>
            </form>
        </div>
    </div>
</div>



        <!-- Section to display the currently selected reflection entry -->
        <div class="row mt-5">
            <div class="col-md-6 m-auto">
                <div class="card card-body" id="currentReflection">
                    <h2 class="text-center mb-3">Current Reflection</h2>
                    <div id="reflectionContent">
                        <% if (currentReflection) { %>
                            <p>Date: <%= currentReflection.date %></p>
                            <p>Journal Entry: <%= currentReflection.journalEntry %></p>
                            <p>Mood: <%= currentReflection.mood %></p>
                        <% } else { %>
                            <p>No reflections yet.</p>
                        <% } %>
                    </div>
                    <div class="text-center mt-3">
                        <!-- Previous Entry button -->
                        <form action="/dailyReflections/previousReflection/<%= currentReflection ? currentReflection._id : '' %>" method="get">
                            <button type="submit" class="btn btn-secondary mr-3">Previous Entry</button>
                        </form>
                        <!-- Next Entry button -->
                        <form action="/dailyReflections/nextReflection/<%= currentReflection ? currentReflection._id : '' %>" method="get">
                            <button type="submit" class="btn btn-secondary">Next Entry</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <!-- Section to display all reflection entries -->
        <div class="row mt-5">
            <div class="col-md-12">
                <h2 class="text-center mb-3">All Reflections</h2>
                <div class="row">
                    <% if (reflections.length > 0) { %>
                        <% reflections.forEach((reflection, index) => { %>
                            <div class="col-md-4 mb-4" id="reflection<%= index %>">
                                <div class="card">
                                    <div class="card-body">
                                        <h5 class="card-title">Date: <%= reflection.date %></h5>
                                        <p class="card-text">Journal Entry: <%= reflection.journalEntry %></p>
                                        <p class="card-text">Mood: <%= reflection.mood %></p>
                                        <!-- Edit and Delete buttons -->
                                        <form action="/dailyReflections/editReflection/<%= reflection._id %>" method="get">
                                            <button type="submit" class="btn btn-warning">Edit</button>
                                        </form>
                                        <form action="/dailyReflections/deleteReflection/<%= reflection._id %>" method="post">
                                            <button type="submit" class="btn btn-danger">Delete</button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        <% }); %>
                    <% } else { %>
                        <p>No reflections yet.</p>
                    <% } %>
                </div>
            </div>
        </div>

    </div>
</body>
</html>
