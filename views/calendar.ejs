<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Calendar</title>
    <!-- Add Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>

<body>
    <div class="container">
        <h1>Calendar</h1>
        <!-- Your calendar content goes here -->
        <div id="calendar"></div>

        <!-- Add jQuery library (required) -->
        <script src="https://cdn.jsdelivr.net/npm/jquery@3.4.1/dist/jquery.min.js"></script>

        <!-- Add the evo-calendar.js for functionality -->
        <script src="https://cdn.jsdelivr.net/npm/evo-calendar@1.1.2/evo-calendar/js/evo-calendar.min.js"></script>

        <script>
            $(document).ready(function () {
                // Initialize Evo Calendar
                $("#calendar").evoCalendar({
                    calendarEvents: [], // Initialize with empty events
                });

                // Function to fetch and add daily reflection events to the calendar
                function fetchAndAddReflectionEvents() {
                    $.ajax({
                        url: '/api/daily-reflections', // Endpoint to fetch daily reflection data
                        method: 'GET',
                        success: function (data) {
                            // Format reflection data for display on the calendar
                            const reflectionEvents = data.map(reflection => {
                                return {
                                    id: reflection._id,
                                    name: reflection.questionOfTheDay,
                                    date: new Date(reflection.date), // Convert date to JavaScript Date object
                                    type: 'reflection', // You can define your own type for reflections
                                    // You can add more properties like description, mood, etc. if needed
                                };
                            });

                            // Add reflection events to the calendar
                            $("#calendar").evoCalendar('addCalendarEvent', reflectionEvents);
                        },
                        error: function (error) {
                            console.error('Error fetching daily reflections:', error);
                        }
                    });
                }

                // Fetch and add daily reflection events when the page loads
                fetchAndAddReflectionEvents();
            });
        </script>

        <!-- Add event form -->
        <form id="addEventForm" class="mt-4 mb-6">
            <div class="form-group">
                <input type="text" id="eventId" class="form-control" placeholder="Event ID" required>
            </div>
            <div class="form-group">
                <input type="text" id="eventName" class="form-control" placeholder="Event Name" required>
            </div>
            <div class="form-group">
                <input type="text" id="eventDate" class="form-control" placeholder="Event Date" required>
            </div>
            <div class="form-group">
                <input type="text" id="eventType" class="form-control" placeholder="Event Type" required>
            </div>
            <div class="form-group">
                <input type="text" id="eventBadge" class="form-control" placeholder="Event Badge">
            </div>
            <div class="form-group">
                <textarea id="eventDescription" class="form-control" placeholder="Event Description"></textarea>
            </div>
            <div class="form-group">
                <input type="color" id="eventColor" class="form-control" placeholder="Event Color">
            </div>
            <div class="form-group form-check">
                <input type="checkbox" id="eventEveryYear" class="form-check-input">
                <label for="eventEveryYear" class="form-check-label">Event Every Year</label>
            </div>
            <button type="submit" class="btn btn-primary">Add Event</button>
        </form>

        <!-- Remove event form -->
        <form id="removeEventForm" class="mt-4">
            <div class="form-group">
                <input type="text" id="removeEventId" class="form-control" placeholder="Event ID to Remove" required>
            </div>
            <button type="submit" class="btn btn-danger">Remove Event</button>
        </form>
    </div>

    <!-- Add Bootstrap JS -->
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>

</html>
